<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/input"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Введите пример для решения"
        android:inputType="textMultiLine"
        android:lines="3" />
    <Button
        android:id="@+id/btn1"
        android:text="1" />
    <Button
        android:id="@+id/btn2"
        android:text="2" />
    <Button
        android:id="@+id/btn3"
        android:text="3" />
    <Button
        android:id="@+id/btnPlus"
        android:text="+" />
    <Button
        android:id="@+id/btn4"
        android:text="4" />
    <Button
        android:id="@+id/btn5"
        android:text="5" />
    <Button
        android:id="@+id/btn6"
        android:text="6" />
    <Button
        android:id="@+id/btnMinus"
        android:text="-" />
    <Button
        android:id="@+id/btn7"
        android:text="7" />
    <Button
        android:id="@+id/btn8"
        android:text="8" />
    <Button
        android:id="@+id/btn9"
        android:text="9" />
    <Button
        android:id="@+id/btnSubstract"
        android:text="/" />
    <Button
        android:id="@+id/btnClear"
        android:text="Clear" />
    <Button
        android:id="@+id/btn0"
        android:text="0" />
    <Button
        android:id="@+id/btnEquals"
        android:text="=" />
    <Button
        android:id="@+id/btnMultiplie"
        android:text="*" />


</GridLayout>